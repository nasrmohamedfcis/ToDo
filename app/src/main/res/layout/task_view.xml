<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="#d10920"
        android:text="Task Name"
        android:textSize="28dp"
        android:id="@+id/tvResultedName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#1225a3"
        android:textSize="20dp"
        android:text="Description of notes is really fantastic"
        android:id="@+id/tvResultedNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#1225a3"
            android:id="@+id/tvResultedStartDate"
            android:layout_weight="1.8"
            android:textSize="18dp"
            android:text="Start Date "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#000000"
            android:layout_weight="1.4"
            android:text="to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#1225a3"
            android:id="@+id/tvResultedEndDate"
            android:layout_weight="1.8"
            android:textSize="18dp"
            android:text="End Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>